<%- include("../partials/header") -%>

<div class="containerc">
  

    <% if(users == "") {%>

        <div class="box glass centeralign">
            <div>
            <i class="fa-regular fa-folder-open" style="color:#4f0303; font-size:100px; "></i>
            </div>
            <div>
              <h1 class="text-light">No Users Registered</h1>
            </div>
        </div>

 <%} else { %>
    
    <h1 class="mb-5 text-light d-flex" style="font-weight: bolder; align-self: flex-start">Users</h1>
    
   <% for(let i=0; i<users.length; i++){ %>

    <div class="box glass col-12 leftalign text-light mt-3">
        
        <h5>Name : <%= users[i].name %></h5>
        <h6>Email: <%= users[i].email %></h6>
        
        <% if(users[i].status == 1) {%>

            <button class="btn btn-danger btn-sm" onclick="location.href='/admin/userda/<%=users[i]._id%>'">Deactivate</button>

        <% } else{ %>    

            <button class="btn btn-success btn-sm" onclick="location.href='/admin/usera/<%=users[i]._id%>'">Activate</button>

         <% } %>   
            
    </div>

    <% } }%>

</div>



<%- include("../partials/footer") -%>
