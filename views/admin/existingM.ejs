<%- include("../partials/header") -%>

<div class="containerc">
  

    <% if(!managers) {%>

        <div class="box glass centeralign">
            <div>
            <i class="fa-regular fa-folder-open" style="color:#4f0303; font-size:100px; "></i>
            </div>
            <div>
              <h1 class="text-light">No Managers Assigned</h1>
            </div>
        </div>

 <%} else { %>
    
    <h1 class="mb-5 text-light d-flex" style="font-weight: bolder; align-self: flex-start">Managers</h1>
    
   <% for(let i=0; i<managers.length; i++){ %>

    <div class="box glass col-12 leftalign text-light mt-3">
        
        <h5>Name : <%= managers[i].name %></h5>
        <h6>Topic: <%= managers[i].topic.name %></h6>
        <h6>Email: <%= managers[i].email %></h6>
        <span class="mt-2">
        <button class="btn btn-danger btn-sm" onclick="location.href='/admin/managerD/<%=managers[i]._id%>'">Delete</button>
        <button class="btn btn-secondary btn-sm" onclick="location.href='/admin/managerE/<%=managers[i]._id%>'">Edit</button>
        </span>

            
    </div>

    <% } }%>

</div>



<%- include("../partials/footer") -%>
