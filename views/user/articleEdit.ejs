<%- include("../partials/header") %>



<div class="containerc">

  <div class="box glass col-12">

    <form method="post" class="col-12 text-light">

      <div>
        <h3 style="font-weight: bolder;"><span style="color: #fec853;">Edit</span><span style="color: #858484;">Post</span></h3>
      </div>

      <div>
        <h5 class="text-light" id="message"><%= message %></h5>
      </div>

      <div class="form-group my-3">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= article.title %>" required>
      </div>

      <div class="form-group">
        <label for="content">Blog Content</label>
        <textarea class="form-control mb-3" name="content" rows="3" required><%= article.content %></textarea>
      </div>

      <div class="centeralign">
        <button type="submit" class="btn btn-outline-light my-3 col-6">Submit</button>
      </div>
      
    </form>
  </div>
</div>





<%- include("../partials/footer") %>